<!DOCTYPE html>
<html>
  <head>
    <title>TurnThePage</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport"content="width=device-width, intial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light bg-orange">
        <div class="container bg-warning">
          <a class="navbar-brand" href="/">
            <span>TurnThePage</span>
          </a>
          <!--<div class="input-group">-->
          <!--  <input type="text" id="txt-search" class="form-control input-group-prepend" placeholder="キーワードを入力"></input>-->
          <!--  <span class="input-group-btn input-group-append">-->
          <!--  <submit type="submit" id="btn-search" class="btn btn-primary"><i class="fas fa-search"></i> 検索</submit></span>-->
          <!--</div>-->
          <button class="navbar-toggler" type="button" data-toggle="callapse" data-target="#navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li>
                <%= link_to "マイページ", public_users_my_page_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
              <li>
                <%= link_to "投稿一覧", public_to_do_posts_path %>
              </li>
              <% elsif admin_signed_in? %>
              <li>
                <%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete %>
              </li>
              <% else %>
              <li>
                <%= link_to "新規登録", new_user_registration_path %>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
      <% if user_signed_in? %>
      <div class="search_form">
        <%= form_with url:public_search_path, local: :true, method: :get do |f| %>
         <%= f.text_field :word %>
         <%= f.select :range, options_for_select([["ユーザー",'User'], ["投稿",'ToDoPost']]) %>
         <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["部分一致","partial_match"]]) %>
         <%= f.submit "検索", class: "btn btn-primary" %>
        <% end %>
      </div>
      <% end %>
    </header>

    <main>
    <p class="notice"><%= notice %></p>
    <%= yield %>
    </main>

    <footer>
      <div class="container mt-5 bg-warning">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight TurnThePage.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
