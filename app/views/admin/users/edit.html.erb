<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-7 px-5 px-sm-0 mx-auto">
      <h2><%= @user.full_name %>さんの情報編集画面</h2>
      <% if @user.errors.any? %>
       <%= @user.errors.count %>件のエラーが発生しました
       <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model:@user, url:admin_user_path(@user), method: :patch do |f| %>
      <table class="table table-borderless">
        <thead>
          <th></th>
          <th></th>
          <th></th>
        </thead>
      <tbody>
        <tr>
          <td>名前</td>
          <td><%= f.label :last_name, "(姓)", class: "user_name" %><%= f.text_field :last_name, :placeholder => "#{@user.last_name}" %></td>
          <td><%= f.label :first_name, "(名)", class: "user_name" %><%= f.text_field :first_name, :placeholder => "#{@user.first_name}" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.label :last_name_kana, "(セイ)" %><%= f.text_field :last_name_kana, :placeholder => "#{@user.last_name_kana}" %></td>
          <td><%= f.label :first_name_kana, "(メイ)" %><%= f.text_field :first_name_kana, :placeholder => "#{@user.first_name_kana}" %></td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td colspan="2"><%= f.text_field :nickname, :placeholder => "#{@user.nickname}" %></td>
        </tr>
        <tr>
          <td>目的</td>
          <td colspan="2"><%= f.text_field :purpose, :placeholder => "#{@user.purpose}" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td colspan="2"><%= f.email_field :email, autocomplete:"email", :placeholder => "#{@user.email}" %></td>
        </tr>
        <tr>
          <td>プロフィール画像</td>
          <td colspan="2"><%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %></td>
        </tr>
        <tr>
          <td>退会ステータス</td>
          <td><%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会済み" %></td>
          <td><%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %></td>
        </tr>
       <tr>
          <td colspan="3"><%= f.submit "更新", class: "btn btn-primary" %></td>
       </tr>
     </tbody>
   </table>
  <% end %>
</div>
