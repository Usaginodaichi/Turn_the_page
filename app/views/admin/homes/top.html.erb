<div class="container">
  <div class="row">
    <h3>会員一覧</h3>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user) do %>
             <%= user.last_name %>
             <%= user.first_name %>
            <% end %>
          </td>
          <td><%= user.email %></td>
          <% if user.is_deleted == false %>
           <td>有効</td>
          <% else %>
           <td>退会</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>