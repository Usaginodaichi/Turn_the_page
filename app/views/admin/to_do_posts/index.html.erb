<div class="container">
  <div class="row">
    <h3>投稿一覧</h3>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th>title</th>
          <th>理由</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @todoposts.each do |todopost| %>
        <tr>
          <td>
            <%= link_to admin_to_do_post_path(todopost) do %>
             <%= todopost.title %>
            <% end %>
          </td>
          <td>
            <%= todopost.description %>
          </td>
          <% if todopost.status == false %>
           <td>未達成</td>
          <% else %>
           <td>達成</td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>