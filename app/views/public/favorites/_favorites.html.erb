<% if todopost.favorited_by?(current_user) %>
 <p>
   <%= link_to to_do_post_favorites_path(todopost), method: :delete, remote: true do %>
    ♥<%= todopost.favorites.count %>いいね
   <% end %>
 </p>
<% else %>
 <p>
   <%= link_to to_do_post_favorites_path(todopost), method: :post, remote: true do %>
    ♡<%= todopost.favorites.count %>いいね
   <% end %>
 </p>
<% end %>