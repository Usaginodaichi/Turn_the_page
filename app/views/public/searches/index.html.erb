<div class="container">
 <h2>検索結果</h2>
 <div class="row">
  <div class="col-md-8 px-5 mx-auto">
   <table class="table table-hover table-inverse">
    <!--ユーザー検索もしくは投稿検索どちらかの結果が表示される-->
    <% if @range == "User" %>
    <tbody>
     <% @users.each do |user| %>
     <tr>
      <td>
       <%= link_to user_path(user) do %>
        <%= user.nickname %>
       <% end %>
      </td>
     </tr>
      <% end %>
     </tbody>
     <% else %>
     <tbody>
      <% @todoposts.each do |todopost| %>
      <tr>
       <td>
        <%= link_to to_do_post_path(todopost) do %>
         <%= todopost.title %>
       </td>
      <% end %>
       <td><%= todopost.description %></td>
      </tr>
      <% end %>
      </tbody>
    <% end %>
   </table>
  </div>
 </div>
</div>
