<h2>Results index</h2>

<table class="table table-hover table-inverse">
 <% if @range == "User" %>
 <tbody>
  <% @users.each do |user| %>
   <tr>
    <td><%= link_to public_users_my_page_path(user) do %>
     <%= user.nickname %>
     <% end %>
     </td>
   </tr>
  <% end %>
 </tbody>
 <% else %>
  <tbody>
   <% @todoposts.each do |todopost| %>
   <tr>
    <td><%= todopost.title %></td>
    <td><%= todopost.description %></td>
   </tr>
  <% end %>
  </tbody>
 <% end %>
</table>
