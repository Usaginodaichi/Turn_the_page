<h2>ユーザー情報編集画面</h2>

<%= form_with model: @user, url:public_users_information_path(@user), method: :patch do |f| %>
<div class="form-group">
  <label for="inputName">氏名</label>
  <%= f.text_field :last_name, autofocus:true, id:"inputName", placeholder:"姓" %>&nbsp;
  <%= f.text_field :first_name, autofocus:true, id:"inputName", placeholder:"名" %>
</div>

<div class="form-group">
  <label for="inputName_kana">フリガナ</label>
  <%= f.text_field :last_name_kana, autofocus:true, id:"inputName_kana", placeholder:"セイ" %>&nbsp;
  <%= f.text_field :first_name_kana, autofocus:true, id:"inputName_kana", placeholder:"メイ" %>
</div>

<div class="form-group">
  <label for="inputNickname">ニックネーム</label>
  <%= f.text_field :nickname, autofocus:true, id:"inputNickname", placeholder:"ニックネーム" %>
</div>

<div class="form-group">
  <label for="inputPurpose">want you remove</label>
  <%= f.text_field :purpose, autofocus:true, id:"inputPurpose", placeholder:"お酒を辞めたい、タバコをやめたいなど" %>
</div>

<div class="form-group">
  <label for="inputEmail">メールアドレス</label>
  <%= f.text_field :email, autofocus:true, id:"inputEmail", placeholder:"address@email.com" %>
</div>

<div class="form-group">
  <label for="inputImage">プロフィール画像</label>
  <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
</div>

<div class="form-group">
  <%= f.submit"編集内容を保存" %>
</div>

<% end %>

<%= link_to"退会する", public_users_unsubscribe_path %>
