<h2>マイページ</h2>
<table class="table">
  <colgroup>
    <col width="25%">
    <col width="75%">
  </colgroup>

  <tbody>
    <tr>
      <th>プロフィール写真</th>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= @user.last_name %>
      <%= @user.first_name %></td>
    </tr>
    <tr>
      <th>カナ</th>
      <td><%= @user.last_name_kana %>
      <%= @user.first_name_kana %></td>
    </tr>
    <tr>
      <th>ニックネーム</th>
      <td><%= @user.nickname %></td>
    </tr>
    <tr>
      <th>want you remove</th>
      <td><%= @user.purpose %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @user.email %></td>
    </tr>
  </tbody>
</table>

<% if @user == current_user %>
 <%= link_to"編集する", public_users_information_edit_path(@user) %>
<% end %>