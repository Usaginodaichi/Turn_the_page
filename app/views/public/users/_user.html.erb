<div class="col-md-3">
  <h2>ユーザー情報</h2>
  <% if user.profile_image.attached? %>
   <%= image_tag user.get_profile_image(100,100) %>
  <% else %>
   <%= image_tag'no_image.jpg' %>
  <% end %>

  <table class="table">
    <tbody>
      <tr>
        <th>名前</th>
        <th><%= user.full_name %></th>
      </tr>
      <tr>
        <th>ニックネーム</th>
        <th><%= user.nickname %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to public_users_information_edit_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
     <i class="fas fa-user-cog"></i>
    <% end %>
    <%= link_to new_public_to_do_post_path, class:"btn btn-outline-secondary btn-block" do %>
     <%= "新規投稿" %>
    <% end %>
  </div>

</div>