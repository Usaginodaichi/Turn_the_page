<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render'public/users/user', user:@user %>

  <div class="card-list col-md-8 px-5 mx-auto">
  <h4>お気に入り投稿一覧</h4>
   <% @favorite_posts.each do |to_do_post| %>
   <div class="card w-50 mx-auto shadow-lg">
    <%= link_to public_to_do_post_path(to_do_post.id) do %>
     <%= image_tag to_do_post.get_image, class:"card-img-top"; %>
    <% end %>

    <div class="card-body">
     <div class="row">
      <div class="col-2">
       <%= image_tag to_do_post.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
      </div>
      <div class="col-10">
       <div class="card-title">
        <%= link_to(public_to_do_post_path(to_do_post.id), class:"text-dark") do %>
        <strong><i class="far fa-flag"></i><span><%= to_do_post.title %></span></strong>
        <% end %>
        <p class="card-text">説明:<%= to_do_post.description %></p>
        <% if to_do_post.status == true %>
         <span><i class="fa-regular fa-star"></i></span>
        <% else %>
        <% end %>
        <span><i class="fas fa-user"></i><%= to_do_post.user.nickname %> | </span>
        <span><%= link_to"#{to_do_post.post_comments.count}コメント", public_to_do_post_path(to_do_post.id), class:"text-dark" %></span>
       </div>
      </div>
     </div>
    </div>
   </div>
   <% end %>
  </div>
 </div>
</div>
